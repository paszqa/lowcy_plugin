{
    "manifest_version": 2,
    "name": "LowcyGier.pl Fixes",
    "version": "0.1",
    "description": "Improves LowcyGier.pl landing page browsing experience",
    "author": "Paszq",
    "homepage_url": "https://github.com/paszqa",
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "matches": ["https://lowcygier.pl/"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      },
      "default_title": "Fixes for LowcyGier.pl I guess"
    }
  }
  